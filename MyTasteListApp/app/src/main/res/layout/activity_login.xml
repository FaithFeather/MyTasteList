<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@color/background"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.livia.mytastelist.UserLogin">

    <EditText
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_field"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Username"
        android:paddingLeft="@dimen/padding_left"
        android:background="@color/text_back"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/etUsername"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/space"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_field"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Password"
        android:paddingLeft="@dimen/padding_left"
        android:background="@color/text_back"
        android:layout_below="@+id/etUsername"
        android:id="@+id/etPass"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="LOGIN"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/background_button"
        android:textColor="@color/text_back"
        android:id="@+id/bLogin"
        android:layout_below="@+id/etPass"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:text="Saved Informations ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bLogin"
        android:textColor="@color/text_back"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/checkBox" />

    <TextView
        android:text="Register Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox"
        android:layout_marginTop="10dp"
        android:textColor="@color/background_button"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvRegister" />


</RelativeLayout>
